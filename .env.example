# Data Source Configuration
DATASOURCE_TYPE=mongodb
DATASOURCE_NAME=mongodb

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=mydb

# Optional: Specific collections (comma-separated, leave empty for all)
# MONGODB_COLLECTIONS=users,products,orders

# PostgreSQL Configuration
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=mydb
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password
# POSTGRES_SCHEMA=public
# POSTGRES_TABLES=users,products,orders

# MySQL Configuration
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=mydb
# MYSQL_USER=root
# MYSQL_PASSWORD=password
# MYSQL_TABLES=users,products,orders

# REST API Configuration
# REST_BASE_URL=https://api.example.com
# REST_AUTH_TOKEN=your-bearer-token
# REST_ENDPOINTS=[{\"path\":\"/users\",\"method\":\"GET\",\"queryName\":\"users\"}]

# Server Configuration
SERVER_PORT=4000
OUTPUT_DIR=./generated

# Apollo Federation (Optional)
# APOLLO_GRAPH_REF=my-graph@current
# APOLLO_KEY=service:my-graph:key

# Debugging (Optional - set to any value to enable debug logging)
# DEBUG=true
